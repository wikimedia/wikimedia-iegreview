{
  "name": "mediawiki/iegreview",
  "require": {
    "php": ">=5.3.7",
    "bd808/monolog-udp2log-handler": "1.0.1",
    "monolog/monolog": "1.10.0",
    "phpmailer/phpmailer": "v5.2.8",
    "slim/slim": "2.4.3",
    "slim/views": "0.1.2",
    "twig/twig": "1.16.0",
    "wikimedia/simplei18n": "1.0.0"
  },
  "autoload": {
    "psr-4": {
      "Wikimedia\\IEGReview\\": "src/"
    }
  },
  "config": {
    "autoloader-suffix": "_iegreview",
    "preferred-install": "dist"
  },
  "require-dev": {
    "jakub-onderka/php-parallel-lint": "0.8.*",
    "phpunit/phpunit": "4.4.*",
    "squizlabs/php_codesniffer": "2.1.*",
    "mediawiki/mediawiki-codesniffer": "0.1.0"
  },
  "scripts": {
    "test": [
        "parallel-lint . --exclude vendor",
        "phpunit $PHPUNIT_ARGS",
        "phpcs $PHPCS_ARGS --report-full --report-summary --encoding=utf-8 --extensions=php --standard=vendor/mediawiki/mediawiki-codesniffer/MediaWiki --ignore=vendor -v ."
      ]
  }
}
